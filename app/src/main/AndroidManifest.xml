<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.donkey.versus" >

    <uses-permission android:name="android.permission.INTERNET" />

    <dependency>
        <groupId>
com.facebook.android
        </groupId>

        <artifactId>
facebook-android-sdk
        </artifactId>

        <version>
4.3.0
        </version>
    </dependency>
    <dependency>
        <groupId>
com.squareup.picasso
        </groupId>

        <artifactId>
picasso
        </artifactId>

        <version>
2.5.2
        </version>
    </dependency>
    <dependency>
        <groupId>br.com.liveo</groupId>
        <artifactId>navigationdrawer-material</artifactId>
        <version>2.3.4</version>
        <type>aar</type>
    </dependency>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".RoomHomeActivity"
            android:label="@string/title_activity_room_home"
            android:theme="@style/nLiveoDrawer">
        </activity>
        <activity
            android:name=".newRoomActivity"
            android:label="@string/title_activity_new_room" >
        </activity>
        <activity
            android:name=".inviteFriendActivity"
            android:label="@string/title_activity_invite_friend" >
        </activity>
        <activity
            android:name=".challengeHomeActivity"
            android:label="@string/title_activity_challenge_home" >
        </activity>
        <activity
            android:name=".joinActivity"
            android:label="@string/title_activity_join" >
        </activity>


    </application>

</manifest>
